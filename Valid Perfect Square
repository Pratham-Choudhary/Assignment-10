class Solution {
public:
    bool isPerfectSquare(int num) {
        int l = 0;
        int r = num;
        while(l <= r)
        {
            int mid=l + (r-l)/2;
            if(mid == 0 || mid < num/mid)
            {
                l = mid +1;
            }
            else if(mid == num/mid && num%mid == 0)
            {
                return true;
            }
            else
            {
                r=mid-1;
            }
        }
        return false;
    }
};
